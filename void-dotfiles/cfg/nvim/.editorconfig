# --          ╭─────────────────────────────────────────────────────────╮
# --          │                     EditorConfig                        │
# --          ╰─────────────────────────────────────────────────────────╯
root = true
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
indent_size = 2
indent_style = space

[*.{js,py}]
charset = utf-8

[lib/**.js]
indent_style = space
indent_size = 2

[*.py]
indent_style = space
indent_size = 4

[*.lua]
quote_style = single
indent_style = space
indent_size = 2

[Makefile]
indent_style = tab

[{package.json,.travis.yml}]
indent_style = space
indent_size = 2
